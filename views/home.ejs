<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sportify</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container mb-4">
        <h1 class="mb-4">Sportify - Your #1 sports item shop!</h1>
        <h3>Categories</h3>
        <a href="/categories/new" class="btn btn-success">New Category</a>

        <% categories.forEach(category => { %>  
            <% let count = category.articles.length %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= category.title  %></h4>
                    <div class="card-articles-number mb-2">
                        <%= ("Number of articles in the category: " + count) %>
                    </div>
                    <a href="categories/category/<%= category.id %>" class="btn btn-primary">See all articles</a>
                    <form action="categories/category/<%= category.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                
                </div>  
            </div>
        <% }) %>
        
    </div>
    <div class="container mt-4">
        <h3>Posts</h3>
        <a href="/posts/new" class="btn btn-success mb-2">New Post</a>
        
        <% posts.slice(0,3).forEach(post => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%= post.title  %></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%= post.createdAt.toLocaleDateString() %>
                    </div>
                    <div class="card-articles-number mb-2">
                        <%= post.description %>
                    </div>
                    <a href="posts/<%= post.slug %>" class="btn btn-primary">Read More</a>
                    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                
                </div>  
            </div>
        <% }) %>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>