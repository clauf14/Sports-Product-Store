<div class="container">
<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= post.title  %>" type="text"  name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" name="description" id="description" class="form-control" rows="5"><%= post.description%></textarea>
<div class="form-group">
    <label for="markdown">Markdown</label>
    <textarea required type="text" name="markdown" id="markdown" class="form-control mb-2" rows="10"><%= post.markdown%></textarea>
</div>
    <a href="/" class="btn btn-secondary"> Cancel </a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>